source 'https://rubygems.org'

ruby '<%= RUBY_VERSION %>'

<% @gen.gems['production'].each_pair do |gem, version| %>
gem '<%= gem %>'<% if version %>, '~> <%= version %>'<% end %>
<% end %>

group :test do
<% @gen.gems['test'].each_pair do |gem, version|  %>
  gem '<%= gem %>'<% if version %>, '~> <%= version %>'<% end %>
<% end %>
end
